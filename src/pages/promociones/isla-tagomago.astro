    transform: translateX(-40px);
  }

  .scroll-animate[data-direction="right"] {
    transform: translateX(40px);
  }

  .scroll-animate[data-direction="up"] {
    transform: translateY(-40px);
  }

  .scroll-animate.animate-in {
