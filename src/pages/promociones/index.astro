---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/common/Header.astro';
import { NAVIGATION } from '~/config';
import { Image } from 'astro:assets';

// Tagomago card image
import tagomagoImg from '~/assets/promociones/isla-tagomago/aerial-main-view.png';

const metadata = {
  title: 'Promociones — EVENE',
  description: 'Descubre las promociones inmobiliarias de EVENE: proyectos residenciales exclusivos en las mejores ubicaciones de Madrid.',
};

const developments = [
  {
    name: 'ISLA TAGOMAGO',
    location: 'Puerta de Hierro, Madrid',
    status: 'En comercialización',
    description: '2 chalets pareados de lujo con jardín, piscina privada y azotea. Diseño contemporáneo, materiales premium y eficiencia energética A+.',
    image: tagomagoImg,
    href: '/promociones/isla-tagomago',
    tags: ['Chalets', 'Piscina', 'Jardín', 'Ascensor privado'],
  },
];
---

<PageLayout metadata={metadata}>
  <Header slot="header" {...NAVIGATION().header} isFloatingAtTop isSticky />

  <!-- HERO -->
  <section class="relative bg-[#1a1a1a] pt-36 pb-24 md:pt-44 md:pb-32 px-6 overflow-hidden">
    <!-- Subtle gradient accent -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/3"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-primary/5 rounded-full blur-[100px] translate-y-1/2 -translate-x-1/3"></div>

    <div class="relative max-w-4xl mx-auto text-center promo-fade-in">
      <p class="text-sm md:text-base tracking-[0.35em] uppercase text-primary mb-6 font-medium">
        Evene
      </p>
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-white mb-8 leading-tight">
        Nuestras Promociones
      </h1>
      <div class="w-16 h-px bg-primary/50 mx-auto mb-8"></div>
      <p class="text-lg md:text-xl text-white/70 font-light max-w-2xl mx-auto leading-relaxed">
        Proyectos residenciales exclusivos en ubicaciones privilegiadas de Madrid, donde la calidad, el diseño y la sostenibilidad definen cada hogar.
      </p>
    </div>
  </section>

  <!-- CURRENT DEVELOPMENTS -->
  <section class="bg-[#faf9f7] py-24 md:py-32 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 md:mb-20">
        <h2 class="text-sm md:text-base tracking-[0.3em] uppercase text-[#1a1a1a] mb-6 font-medium">
          Promociones actuales
        </h2>
        <div class="w-12 h-px bg-primary mx-auto"></div>
      </div>

      <!-- Development Cards -->
      {developments.map((dev) => (
        <a href={dev.href} class="group block">
          <article class="grid grid-cols-1 lg:grid-cols-2 gap-0 bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-500">
            <!-- Image -->
            <div class="relative overflow-hidden h-[300px] lg:h-[480px]">
              <Image
                src={dev.image}
                alt={`Vista de ${dev.name}`}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-[1.03]"
                loading="eager"
                widths={[600, 900, 1200]}
              />
              <div class="absolute inset-0 bg-linear-to-t from-black/40 via-transparent to-transparent"></div>
              <!-- Status badge -->
              <div class="absolute top-5 left-5">
                <span class="inline-flex items-center gap-2 bg-white/95 backdrop-blur-sm text-secondary text-xs font-semibold tracking-wider uppercase px-4 py-2 rounded-full shadow-md">
                  <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
                  {dev.status}
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="flex flex-col justify-center p-8 md:p-12 lg:p-16">
              <p class="text-xs tracking-[0.25em] uppercase text-primary mb-3 font-medium">
                {dev.location}
              </p>
              <h3 class="font-serif text-3xl md:text-4xl text-[#1a1a1a] mb-6 group-hover:text-secondary transition-colors">
                {dev.name}
              </h3>
              <div class="w-10 h-px bg-primary/40 mb-6"></div>
              <p class="text-[#4a4a4a] leading-relaxed mb-8">
                {dev.description}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-8">
                {dev.tags.map((tag) => (
                  <span class="px-3 py-1.5 bg-[#faf9f7] rounded-full text-xs tracking-wider uppercase text-secondary border border-primary/20">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- CTA -->
              <div class="inline-flex items-center gap-2 text-secondary font-medium group-hover:text-primary transition-colors">
                Descubrir proyecto
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </section>

  <!-- COMING SOON -->
  <section class="bg-white py-24 md:py-32 px-6">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-sm md:text-base tracking-[0.3em] uppercase text-[#1a1a1a] mb-6 font-medium">
        Próximamente
      </h2>
      <div class="w-12 h-px bg-primary mx-auto mb-10"></div>
      <p class="font-serif text-2xl md:text-3xl text-[#1a1a1a] mb-6 leading-snug">
        Nuevos proyectos en preparación
      </p>
      <p class="text-[#4a4a4a] leading-relaxed mb-10 max-w-2xl mx-auto">
        Estamos trabajando en nuevas promociones en ubicaciones estratégicas de Madrid. Si quieres ser el primero en conocer nuestros próximos lanzamientos, no dudes en ponerte en contacto con nosotros.
      </p>
      <a
        href="/contact"
        class="bg-primary hover:bg-primary/90 text-white font-medium text-base px-10 py-4 rounded-full inline-flex items-center gap-2 transition-all shadow-md hover:shadow-lg hover:scale-105"
      >
        Contactar
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </section>
</PageLayout>

<style>
  @reference "../../styles/global.css";

  @keyframes promo-fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .promo-fade-in {
    animation: promo-fade-in 1s ease-out;
  }
</style>
